    "nodemon": "^1.17.5",
    "rewire": "^3.0.2",
    "sinon": "^4.5.0",
    "sinon-mongoose": "^2.1.1"
  },
  "apidoc": {
    "title": "DemocracyOS v3 API",
    "url": "api/v1"
  }
