    "type": "git",
    "url": "git://github.com/DemocracyOS/core.git"
  },
  "engines": {
    "node": "^8"
  },
  "scripts": {
    "start": "node server",
    "dev": "nodemon",
    "test": "NODE_ENV=test mocha --recursive --timeout 10000",
