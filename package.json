    "draft-js": "^0.10.5",
    "express": "^4.16.3",
    "express-paginate": "^0.3.0",
    "express-react-views": "^0.10.5",
    "express-session": "^1.15.6",
    "express-winston": "^2.5.1",
    "helmet": "^3.12.1",
    "http-status": "^1.2.0",
    "keycloak-connect": "^4.1.0",
    "mongoose": "^5.1.5",
    "mongoose-paginate": "^5.0.3",
    "mongoose-version": "^1.1.0",
    "nodemailer": "^4.6.6",
    "prop-types": "^15.6.1",
